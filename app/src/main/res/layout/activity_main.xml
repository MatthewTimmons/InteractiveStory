<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.teamtreehouse.interactivestory.ui.MainActivity">

    <ImageView
            android:contentDescription="@string/signals_from_mars_title_image"
            android:layout_height="wrap_content" app:srcCompat="@drawable/main_title"
            android:id="@+id/titleImageView"
            android:scaleType="fitXY" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_width="0dp" app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintTop_toTopOf="parent" android:adjustViewBounds="true"/>
    <Button
            android:layout_height="43dp"
            android:id="@+id/startButton" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_width="0dp" android:background="@android:color/white" android:text="START YOUR ADVENTURE"
            android:textColor="#3A8AEC"/>
    <EditText
            android:layout_height="41dp"
            android:inputType="textCapWords|textPersonName"
            android:ems="10"
            android:id="@+id/nameEditText" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.503"
            app:layout_constraintBottom_toTopOf="@+id/startButton" android:hint="Enter your name"
            android:maxLength="30" android:layout_width="0dp" android:background="@android:color/white"
            android:layout_marginStart="8dp" android:layout_marginEnd="8dp"/>
</android.support.constraint.ConstraintLayout>
